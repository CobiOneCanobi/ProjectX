%header.navigation{:role => "banner"}
  / = render 'refills/sliding_menu'
  .navigation-wrapper
    %a.logo{:href => "javascript:void(0)"}
      / %img{:alt => "Logo Image", :src => "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/placeholder_logo_1.png"}
      = render 'refills/sliding_menu'
    %a#js-mobile-menu.navigation-menu-button{:href => "javascript:void(0)"} MENU
    %nav{:role => "navigation"}
      %ul#js-navigation-menu.navigation-menu.show
        %li.nav-link
          %a{:href => "javascript:void(0)"} SpeakUp
      /   %li.nav-link
      /     %a{:href => "javascript:void(0)"} About Us
      /   %li.nav-link
      /     %a{:href => "javascript:void(0)"} Contact
      /   %li.nav-link.more
      /     %a{:href => "javascript:void(0)"} More
      /     %ul.submenu
      /       %li
      /         %a{:href => "javascript:void(0)"} Submenu Item
      /       %li
      /         %a{:href => "javascript:void(0)"} Another Item
      /       %li.more
      /         %a{:href => "javascript:void(0)"} Item with submenu
      /         %ul.submenu
      /           %li
      /             %a{:href => "javascript:void(0)"} Sub-submenu Item
      /           %li
      /             %a{:href => "javascript:void(0)"} Another Item
      /       %li.more
      /         %a{:href => "javascript:void(0)"} Another submenu
      /         %ul.submenu
      /           %li
      /             %a{:href => "javascript:void(0)"} Sub-submenu
      /           %li
      /             %a{:href => "javascript:void(0)"} An Item
    .navigation-tools
      .search-bar
        %form{:role => "search"}
          %input{:placeholder => "Enter Search", :type => "search"}/
          %button{:type => "submit"}
            %img{:alt => "Search Icon", :src => "https://raw.githubusercontent.com/thoughtbot/refills/master/source/images/search-icon.png"}
      - if !current_user
        = link_to 'Sign Up', new_user_registration_path, class: 'sign-up'
        = link_to 'Log in', new_user_session_path, class: 'sign-up'
      - else
        = link_to '+', '', class: 'sign-up'
        = link_to 'Log out', destroy_user_session_path, method: :delete, class: 'sign-up'

